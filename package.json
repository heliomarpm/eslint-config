{
	"name": "@samuelmeuli/eslint-config",
	"version": "2.2.1",
	"description": "My ESLint configuration",
	"keywords": [
		"eslint",
		"config",
		"eslint-config",
		"lint"
	],
	"author": {
		"name": "Samuel Meuli",
		"email": "me@samuelmeuli.com",
		"url": "https://samuelmeuli.com"
	},
	"repository": "github:samuelmeuli/eslint-config",
	"license": "MIT",
	"scripts": {
		"format": "prettier --write",
		"release": "np"
	},
	"peerDependencies": {
		"eslint": "^5.0.0 || ^6.0.0",
		"eslint-plugin-import": "^2.0.0"
	},
	"devDependencies": {
		"husky": "^2.7.0",
		"lint-staged": "^8.2.1",
		"np": "^5.0.3",
		"prettier": "^1.18.2"
	},
	"files": [
		"rules/",
		"settings/",
		"utils/",
		"base.js",
		"base-typescript.js",
		"react.js",
		"react-typescript.js"
	],
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,json,md,yml}": [
			"yarn format",
			"git add"
		]
	}
}
