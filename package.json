{
	"name": "@samuelmeuli/eslint-config",
	"version": "5.0.2",
	"description": "My ESLint configuration",
	"keywords": [
		"eslint",
		"config",
		"eslint-config",
		"lint"
	],
	"author": {
		"name": "Samuel Meuli",
		"email": "me@samuelmeuli.com",
		"url": "https://samuelmeuli.com"
	},
	"repository": "github:samuelmeuli/eslint-config",
	"license": "MIT",
	"files": [
		"rules/",
		"index.js",
		"react.js",
		"typescript.js",
		"typescript-react.js"
	],
	"scripts": {
		"format": "prettier --write",
		"release": "np --no-tests"
	},
	"dependencies": {},
	"peerDependencies": {
		"eslint": "*"
	},
	"devDependencies": {
		"@samuelmeuli/prettier-config": "^1.0.0",
		"husky": "^4.0.7",
		"lint-staged": "^9.5.0",
		"np": "^5.2.1",
		"prettier": "^1.19.1"
	},
	"prettier": "@samuelmeuli/prettier-config",
	"lint-staged": {
		"*.{css,html,js,json,jsx,md,sass,scss,ts,tsx,vue,yaml,yml}": [
			"yarn format",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	}
}
