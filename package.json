		"np": "^5.2.1",
		"prettier": "^1.19.1"
	},
	"lint-staged": {
		"*.{js,json,md,yml}": [
			"yarn format",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	}
